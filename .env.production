# WhatsApp Multi-Session API - Production Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# API Security
API_KEY=whatsapp-api-key-2024-CHANGE-THIS-IN-PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# WhatsApp Configuration
SESSIONS_PATH=./sessions
QR_CODES_PATH=./dist/qrcodes
MAX_SESSIONS=50
SESSION_TIMEOUT=300000

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB

# Database (if using external DB)
# DATABASE_URL=postgresql://user:password@localhost:5432/whatsapp_api
# REDIS_URL=redis://localhost:6379

# Webhook Configuration
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# Security Headers
CORS_ORIGIN=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ACCESS_LOG_FILE=./logs/access.log

# Performance
MAX_OLD_SPACE_SIZE=1024
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox,--disable-dev-shm-usage

# SSL Configuration (if using HTTPS directly in Node.js)
# SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
# SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_RETENTION_DAYS=30

# Development/Debug (set to false in production)
DEBUG=false
PUPPETEER_HEADLESS=true

# Default Admin User (change in production)
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASSWORD=admin123

# Session Management
SESSION_CLEANUP_INTERVAL=3600000
INACTIVE_SESSION_TIMEOUT=1800000